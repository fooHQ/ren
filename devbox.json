{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": [
    "go@1.24",
    "golangci-lint@1.64.5"
  ],
  "env": {
    "GOROOT":      "",
    "GOPATH":      "",
    "CGO_ENABLED": "0"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "./devbox.sh test"
      ],
      "lint": [
        "golangci-lint run --timeout 10m"
      ],
      "build": [
        "./devbox.sh build"
      ]
    }
  }
}
